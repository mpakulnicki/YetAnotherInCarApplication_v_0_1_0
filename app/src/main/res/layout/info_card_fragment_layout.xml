<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/info_card_fragment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/activity_background_color">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="20dp">

    <TextView android:id="@+id/info_card_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dip"
        android:layout_marginTop="30dip"
        android:layout_marginLeft="0dp"
        android:layout_gravity="left"
        android:text="time text"
        android:textColor="@color/yaica_white"
        android:textSize="20sp" />

    </LinearLayout>

    <TextView android:id="@+id/speedometer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/km_white"
        android:layout_gravity="center"
        android:layout_marginTop="70dip"
        android:layout_marginRight="20dip"
        android:text="0.0 km/h"
        android:textSize="50sp" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_marginTop="150dip"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/speedometer_saved_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/km_black"
            android:textColor="@color/yaica_white"
            android:layout_gravity="center"
            android:layout_marginTop="0dip"
            android:layout_marginRight="20dip"
            android:text="0.0 km/h"
            android:textSize="20sp" />

        <TextView android:id="@+id/speedometer_set_speed_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dip"
            android:text="set speed"
            android:textColor="@color/yaica_white"
            android:textSize="20sp"/>

        <TextView android:id="@+id/speedometer_clear_speed_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dip"
            android:text="clear"
            android:textColor="@color/yaica_white"
            android:textSize="20sp"/>

        <!--<ImageView-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:scaleType="fitCenter"-->
            <!--android:layout_marginRight="20dip"-->
            <!--android:background="@drawable/ic_launcher"-->
            <!--android:id="@+id/speedometer_set_speed_image"/>-->

        <!--<ImageView-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:scaleType="fitCenter"-->
            <!--android:background="@drawable/ic_launcher"-->
            <!--android:layout_marginRight="20dip"-->
            <!--android:id="@+id/speedometer_clear_speed_image"/>-->
    </LinearLayout>

    <TextView android:id="@+id/info_card_geolocation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="220dip"
        android:layout_marginLeft="0dp"
        android:text="geolocation text"
        android:textColor="@color/yaica_white"
        android:textSize="16sp" />

    <TextView android:id="@+id/info_card_weather_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="300dip"
        android:textColor="@color/yaica_white"
        android:text="weather text"
        android:textSize="16sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="390dp">

        <TextView android:id="@+id/info_card_battery_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:layout_marginLeft="0dp"
            android:text="battery text"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/yaica_white"
            android:textSize="16sp" />

        <TextView android:id="@+id/info_card_compass_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:layout_marginLeft="10dp"
            android:layout_gravity="right"
            android:text="compass text"
            android:textColor="@color/yaica_white"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>
