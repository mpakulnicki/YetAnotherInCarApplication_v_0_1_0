<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exit_card_fragment_layout"
    android:layout_width="match_parent"
    android:background="@color/activity_background_color"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:id="@+id/yaica_exit_anime_layout"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_height="137dp"
            android:layout_width="137dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:background="@drawable/yaica_icon"
            android:id="@+id/yaica_exit_imageView"/>

        <TextView
            android:text="@string/yaica_exit_txt"
            android:id="@+id/yaica_exit_textView"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:textColor="@color/yaica_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
