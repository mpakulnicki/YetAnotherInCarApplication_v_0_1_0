<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/activity_background_color"
    tools:context=".YaicaSplashActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:id="@+id/yaica_splash_anime_layout"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_height="137dp"
            android:layout_width="137dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:background="@drawable/yaica_icon"
            android:id="@+id/yaica_splash_imageView"/>

        <TextView
            android:text="@string/yaica_init_txt"
            android:id="@+id/yaica_splash_textView"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:textColor="@color/yaica_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>
